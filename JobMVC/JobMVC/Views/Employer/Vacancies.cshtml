                        <!-- Active: "bg-gray-100", Not Active: "" -->
                        <a asp-controller="Employer" asp-action="Settings" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-1">Settings</a>
                        <a asp-controller="Employer" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-2">Sign out</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state. -->
    <div class="sm:hidden opacity-0 scale-95" id="mobile-menu">
        <div class="space-y-1 px-2 pt-2 pb-3">
            <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
            <a asp-controller="Employer" asp-action="Vacancies" id="vacancyNav" class="bg-purple-900 text-white px-3 py-2 rounded-md text-sm font-medium">My Vacancies</a>

            <a asp-controller="Employer" asp-action="CVs" id="cvNav" class="text-gray-300 hover:bg-purple-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">CVs</a>
