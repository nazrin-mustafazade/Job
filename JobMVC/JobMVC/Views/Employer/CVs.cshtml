@model List<Cv>
@using JobMVC.VMs.EmployeeVMs
<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-100">
<body class="h-full">
    <div class="min-h-full">
        <div class="bg-indigo-600 pb-32">
            <nav class="bg-indigo-600 border-b border-indigo-300 border-opacity-25 lg:border-none">
                <div class="max-w-7xl mx-auto px-2 sm:px-4 lg:px-8">
                    <div class="relative h-16 flex items-center justify-between lg:border-b lg:border-indigo-400 lg:border-opacity-25">
                        <div class="px-2 flex items-center lg:px-0">
                            <div class="flex-shrink-0">
                                <img class="block h-8 w-8" src="https://tailwindui.com/img/logos/workflow-mark-indigo-300.svg" alt="Workflow">
                            </div>
                            <div class="hidden lg:block lg:ml-10">
                                <div class="flex space-x-4">
                                    <a asp-controller="Employer" asp-action="Vacancies" id="vacancyNav" class="hover:bg-indigo-500 hover:bg-opacity-75 text-white rounded-md py-2 px-3 text-sm font-medium" aria-current="page"> Vacancies </a>

                                    <a asp-controller="Employer" asp-action="CVs" id="appliedNav" class="bg-indigo-700 text-white rounded-md py-2 px-3 text-sm font-medium"> CVs </a>

                                </div>
                            </div>
                        </div>
                        <div class="flex-1 px-2 flex justify-center lg:ml-6 lg:justify-end">
                            <div class="max-w-lg w-full lg:max-w-xs">
                                <label for="search" class="sr-only">Search</label>
                                <div class="relative text-gray-400 focus-within:text-gray-600">
                                    <div class="pointer-events-none absolute inset-y-0 left-0 pl-3 flex items-center">
                                        <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                                        </svg>
                                    </div>
                                    <input id="search" class="block w-full bg-white py-2 pl-10 pr-3 border border-transparent rounded-md leading-5 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-indigo-600 focus:ring-white focus:border-white sm:text-sm" placeholder="Search" type="search" name="search">
                                </div>
                            </div>
                        </div>
                        <div class="flex lg:hidden">
                            <!-- Mobile menu button -->
                            <button type="button" class="bg-indigo-600 p-2 rounded-md inline-flex items-center justify-center text-indigo-200 hover:text-white hover:bg-indigo-500 hover:bg-opacity-75 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-indigo-600 focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
                                <span class="sr-only">Open main menu</span>
                                <!--
                                  Heroicon name: outline/menu

                                  Menu open: "hidden", Menu closed: "block"
                                -->
                                <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                                </svg>
                                <!--
                                  Heroicon name: outline/x

                                  Menu open: "block", Menu closed: "hidden"
                                -->
                                <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                            </button>
                        </div>
                        <div class="hidden lg:block lg:ml-4">
                            <div class="flex items-center">
                                <div class="ml-3 relative flex-shrink-0">
                                    <div>
                                        <button id="userBtn" type="button" class="bg-indigo-600 rounded-full flex text-sm text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-indigo-600 focus:ring-white" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                                            <span class="sr-only">Open user menu</span>
                                            <img class="rounded-full h-8 w-8" src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=4&w=256&h=256&q=60" alt="">
                                        </button>
                                    </div>

                                    <div id="userDiv" class="transform opacity-0 scale-95 origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                                        <a asp-controller="Employer" asp-action="AddVacancy" class="block py-2 px-4 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-0"> Add Vacancy </a>

                                        <a asp-controller="Employer" asp-action="Settings" class="block py-2 px-4 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-1"> Settings </a>

                                        <a asp-controller="Account" asp-action="Signout" class="block py-2 px-4 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-2"> Sign out </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Mobile menu, show/hide based on menu state. -->
                <div class="lg:hidden" id="mobile-menu">
                    <div class="px-2 pt-2 pb-3 space-y-1">
                        <!-- Current: "bg-indigo-700 text-white", Default: "text-white hover:bg-indigo-500 hover:bg-opacity-75" -->
                        <a asp-controller="Employer" asp-action="Vacancies" id="vacancyNav" class="bg-indigo-700 text-white block rounded-md py-2 px-3 text-base font-medium" aria-current="page"> Vacancies </a>

                        <a asp-controller="Employer" asp-action="CVs" id="appliedNav" class="text-white hover:bg-indigo-500 hover:bg-opacity-75 block rounded-md py-2 px-3 text-base font-medium"> CVs </a>

                    </div>
                    <div class="pt-4 pb-3 border-t border-indigo-700">
                        <div class="px-5 flex items-center">
                            <div class="flex-shrink-0">
                                <img class="rounded-full h-10 w-10" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                            </div>
                            <div class="ml-3">
                                <div class="text-base font-medium text-white">Tom Cook</div>
                                <div class="text-sm font-medium text-indigo-300">tom@example.com</div>
                            </div>

                        </div>
                        <div class="mt-3 px-2 space-y-1">
                            <a asp-controller="Employer" asp-action="AddVacancy" class="block rounded-md py-2 px-3 text-base font-medium text-white hover:bg-indigo-500 hover:bg-opacity-75"> Add Vacancy </a>

                            <a asp-controller="Employer" asp-action="Settings" class="block rounded-md py-2 px-3 text-base font-medium text-white hover:bg-indigo-500 hover:bg-opacity-75"> Settings </a>

                            <a asp-controller="Account" asp-action="Signout" class="block rounded-md py-2 px-3 text-base font-medium text-white hover:bg-indigo-500 hover:bg-opacity-75"> Sign out </a>
                        </div>
                    </div>
                </div>
            </nav>
            <header class="py-10">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                    <h1 class="text-3xl font-bold text-white">Vacancies</h1>
                </div>
            </header>
        </div>
        <main class="-mt-32">
            <div class="max-w-7xl mx-auto pb-12 px-4 sm:px-6 lg:px-8">
                <div class="bg-gray-200 rounded-lg shadow px-5 py-6 sm:px-6">
                        <div id="bannerDiv" class="relative bg-indigo-900">
                            <div class="max-w-7xl mx-auto py-3 px-3 sm:px-6 lg:px-8">
                                <div class="pr-16 sm:text-center sm:px-16">
                                    <p class="font-medium text-white">
                                        <span class="hidden md:inline"> Big news! Soon you will be able to invite employees to your particular vacancy. </span>
                                    </p>
                                </div>
                                <div class="absolute inset-y-0 right-0 pt-1 pr-1 flex items-start sm:pt-1 sm:pr-2 sm:items-start">
                                    <button id="bannerBtn" type="button" class="flex p-2 rounded-md hover:bg-purple-500 focus:outline-none focus:ring-2 focus:ring-white">
                                        <span class="sr-only">Dismiss</span>
                                        <!-- Heroicon name: outline/x -->
                                        <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                        </svg>
                                    </button>
                                </div>
                            </div>
                        </div>
                    <ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 py-16 px-8">




                        <!-- More people... -->
                    </ul>

                    <div id="applyDiv" class="hidden fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
                        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
                            <div id="backDiv" class="opacity-0 ease-in duration-200 fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
                            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
                            <div id="modalDiv" class="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95 ease-in duration-200 relative inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-sm sm:w-full sm:p-6">
                                <div>
                                    <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
                                        <!-- Heroicon name: outline/check -->
                                        <svg class="h-6 w-6 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                                        </svg>
                                    </div>
                                    <div class="mt-3 text-center sm:mt-5">
                                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">Application successful</h3>
                                        <div class="mt-2">
                                            <p class="text-sm text-gray-500">Your application has successfully completed.</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-5 sm:mt-6">
                                    <button id="okBtn" type="button" class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:text-sm">OK</button>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </main>
    </div>
</body>
<script>

    let vacancyNav = document.getElementById('vacancyNav')
    let cvNav = document.getElementById('cvNav')
    let appliedNav = document.getElementById('appliedNav')
    let btn2 = document.getElementById('menuBtn')
    let diV2 = document.getElementById('mobile-menu')
    let applyBtn = document.getElementById('applyBtn')
    let okBtn = document.getElementById('okBtn')
    let applyDiv = document.getElementById('applyDiv')
    let backDiv = document.getElementById('backDiv')
    let modalDiv = document.getElementById('modalDiv')
    let btn = document.getElementById('userBtn')
    let diV = document.getElementById('userDiv')
    btn.addEventListener("click", function () {
        if (diV.classList.contains('opacity-0', 'scale-95')) {
            diV.classList.remove('opacity-0', 'scale-95')
            diV.classList.add('opacity-100', 'scale-100', 'duration-100', 'ease-out', 'transform', 'transition')
        } else {
            diV.classList.add('opacity-0', 'scale-95', 'duration-75', 'ease-in', 'transform', 'transition')
            diV.classList.remove('opacity-100', 'scale-100')
        }
    })
    btn2.addEventListener("click", function () {
        if (diV2.classList.contains('opacity-0', 'scale-95')) {
            diV2.classList.remove('opacity-0', 'scale-95')
            diV2.classList.add('opacity-100', 'scale-100', 'duration-150', 'ease-out')
        } else {
            diV2.classList.add('opacity-0', 'scale-95', 'duration-100', 'ease-in')
            diV2.classList.remove('opacity-100', 'scale-100')
        }
    })

    vacancyNav.addEventListener("click", function () {
        vacancyNav.classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.add('bg-gray-900', 'text-white')
        cvNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.remove('bg-gray-900', 'text-white')
    })

    cvNav.addEventListener("click", function () {
        vacancyNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.add('bg-gray-900', 'text-white')
        cvNav.classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.remove('bg-gray-900', 'text-white')
    })

    appliedNav.addEventListener("click", function () {
        vacancyNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.add('bg-gray-900', 'text-white')
    })

    applyBtn.addEventListener("click", function () {
        applyDiv.classList.remove('hidden')

        if (backDiv.classList.contains('opacity-0', 'ease-in', 'duration-200')) {
            backDiv.classList.remove('opacity-0', 'ease-in', 'duration-200')
            backDiv.classList.add('ease-out', 'duration-300', 'opacity-100')

        } else {
            backDiv.classList.add('opacity-0', 'ease-in', 'duration-200')
            backDiv.classList.remove('ease-out', 'duration-300', 'opacity-100')
        }
        modalDiv.classList.remove('opacity-0', 'ease-in', 'duration-200', 'translate-y-4', 'sm:translate-y-0', 'sm:scale-95')
        modalDiv.classList.add('ease-out', 'duration-300', 'opacity-100', 'translate-y-0', 'sm:scale-100')
    })

    okBtn.addEventListener("click", function () {
        applyDiv.classList.add('hidden')
        backDiv.classList.add('opacity-0', 'ease-in', 'duration-200')
        backDiv.classList.remove('ease-out', 'duration-300', 'opacity-100')
        modalDiv.classList.add('opacity-0', 'ease-in', 'duration-200', 'translate-y-4', 'sm:translate-y-0', 'sm:scale-95')
        modalDiv.classList.remove('ease-out', 'duration-300', 'opacity-100', 'translate-y-0', 'sm:scale-100')
    })

</script>


</html>
