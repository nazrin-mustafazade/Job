            <a asp-controller="Employee" asp-action="CVs" id="cvNav" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Other CVs</a>

            <a asp-controller="Employee" asp-action="Countries" id="countriesNav" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Countries</a>

            <a asp-controller="Employee" asp-action="Applied" id="appliedNav" class="text-gray-300 hover:bg-gray-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Applied Vacancies</a>
