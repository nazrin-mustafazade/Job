<script>

    let vacancyNav = document.getElementById('vacancyNav')
    let cvNav = document.getElementById('cvNav')
    let countriesNav = document.getElementById('countriesNav')
    let appliedNav = document.getElementById('appliedNav')
    let btn2 = document.getElementById('menuBtn')
    let diV2 = document.getElementById('mobile-menu')
    let btn = document.getElementById('userBtn')
    let diV = document.getElementById('userDiv')
    btn.addEventListener("click", function () {
        if (diV.classList.contains('opacity-0', 'scale-95')) {
            diV.classList.remove('opacity-0', 'scale-95')
            diV.classList.add('opacity-100', 'scale-100', 'duration-100', 'ease-out', 'transform', 'transition')
        } else {
            diV.classList.add('opacity-0', 'scale-95', 'duration-75', 'ease-in', 'transform', 'transition')
            diV.classList.remove('opacity-100', 'scale-100')
        }
    })
    btn2.addEventListener("click", function () {
        if (diV2.classList.contains('opacity-0', 'scale-95')) {
            diV2.classList.remove('opacity-0', 'scale-95')
            diV2.classList.add('opacity-100', 'scale-100', 'duration-150', 'ease-out')
        } else {
            diV2.classList.add('opacity-0', 'scale-95', 'duration-100', 'ease-in')
            diV2.classList.remove('opacity-100', 'scale-100')
        }
    })

    vacancyNav.addEventListener("click", function () {
        countriesNav.classList.remove('bg-gray-900', 'text-white')
        countriesNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.add('bg-gray-900', 'text-white')
        cvNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.remove('bg-gray-900', 'text-white')
    })

    countriesNav.addEventListener("click", function () {
        countriesNav.classList.add('bg-gray-900', 'text-white')
        countriesNav.classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.remove('bg-gray-900', 'text-white')
    })

    cvNav.addEventListener("click", function () {
        countriesNav.classList.remove('bg-gray-900', 'text-white')
        countriesNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.add('bg-gray-900', 'text-white')
        cvNav.classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.remove('bg-gray-900', 'text-white')
    })

    appliedNav.addEventListener("click", function () {
        countriesNav.classList.remove('bg-gray-900', 'text-white')
        countriesNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.add('bg-gray-900', 'text-white')
    })

</script>



