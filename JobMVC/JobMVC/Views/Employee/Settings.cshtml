    <!-- Password Update -->
    <div id="popupPswrd" class="pt-64 hidden fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
            <div class="relative inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full sm:p-6">
                <div>
                    <div class="border rounded-md px-3 py-2 shadow-sm focus-within:ring-1 focus-within:ring-purple-600 focus-within:border-purple-600">
                        <input type="password" name="password" id="password" class="focus:transparent block w-full border-0 p-0 text-gray-900 ">
                        
                    </div>
                    <div class="pt-8 flex items-center">
                        <button id="toggleBtn" type="button" class="bg-gray-200 relative inline-flex flex-shrink-0 h-6 w-11 border-2 border-transparent rounded-full cursor-pointer transition-colors ease-in-out duration-200 focus:outline-none focus:ring-2 focus:ring-offset-2"  aria-checked="false" aria-labelledby="annual-billing-label">
                            <span id="circle" aria-hidden="true" class="translate-x-0 pointer-events-none inline-block h-5 w-5 rounded-full bg-white shadow transform ring-0 transition ease-in-out duration-200"></span>
                        </button>
                        <span class="ml-3" id="annual-billing-label">
                            <span class="text-sm font-medium text-gray-900">Show Password </span>
                        </span>
                    </div>

                </div>
                <div class="mt-5 sm:mt-6 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
                    <button type="button" class="saveBtn w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-purple-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:col-start-2 sm:text-sm">Save</button>
                    <button type="button" class="cancelBtn mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:col-start-1 sm:text-sm">Cancel</button>
                </div>
            </div>
        </div>

        <script>
            let btn = document.getElementById('toggleBtn')
            let pswrd = document.getElementById('password')
            let circle = document.getElementById('circle')
            btn.addEventListener("click", function () {
                if (btn.classList.contains('bg-gray-200')) {
                    btn.classList.remove('bg-gray-200')
                    btn.classList.add('bg-purple-600')
                    circle.classList.remove('translate-x-0')
                    circle.classList.add('translate-x-5')
                    pswrd.type="text"
                } else {
                    btn.classList.add('bg-gray-200')
                    btn.classList.remove('bg-indigo-600')
                    circle.classList.remove('translate-x-5')
                    circle.classList.add('translate-x-0')
                    pswrd.type = "password"
                }
            })

        </script>
