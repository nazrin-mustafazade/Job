@model List<Cv>
@using JobMVC.VMs.EmployeeVMs
<!DOCTYPE html>
<html lang="en">
<nav class="bg-purple-800">
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="relative flex h-16 items-center justify-between">
            <div class="absolute inset-y-0 left-0 flex items-center sm:hidden">
                <button id="menuBtn" type="button" class="inline-flex items-center justify-center rounded-md p-2 text-gray-400 hover:bg-gray-700 hover:text-white focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white" aria-controls="mobile-menu" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>
                    <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                    </svg>
                    <svg class="hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
                <div class="flex flex-shrink-0 items-center">
                    <img class="block h-8 w-auto lg:hidden" src="https://tailwindui.com/img/logos/mark.svg?color=white" alt="Your Company">
                    <img class="hidden h-8 w-auto lg:block" src="https://tailwindui.com/img/logos/mark.svg?color=white" alt="Your Company">
                </div>
                <div class="hidden sm:ml-6 sm:block">
                    <div class="flex space-x-4">
                        <a asp-controller="Employee" asp-action="Vacancies" id="vacancyNav" class="text-gray-300 hover:bg-purple-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Vacancies</a>

                        <a asp-controller="Employee" asp-action="CVs" id="cvNav" class="bg-purple-900 text-white px-3 py-2 rounded-md text-sm font-medium">Other CVs</a>

                        <a asp-controller="Employee" asp-action="Applied" id="appliedNav" class="text-gray-300 hover:bg-purple-700 hover:text-white px-3 py-2 rounded-md text-sm font-medium">Applied Vacancies</a>
                    </div>
                </div>

            </div>
            <div class="flex-1 flex justify-center px-2 lg:ml-6 lg:justify-end">
                <div class="max-w-lg w-full lg:max-w-xs">
                    <label for="search" class="sr-only">Search</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <!-- Heroicon name: solid/search -->
                            <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                                <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                            </svg>
                        </div>
                        <input id="search" name="search" class="block w-full pl-10 pr-3 py-2 border border-transparent rounded-md leading-5 bg-purple-700 text-gray-300 placeholder-gray-400 focus:outline-none focus:bg-white focus:border-white focus:ring-white focus:text-gray-900 sm:text-sm" placeholder="Search" type="search">
                    </div>
                </div>
            </div>
            <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">


                <div class="relative ml-3">
                    <div>
                        <button id="userBtn" type="button" class="flex rounded-full bg-gray-800 text-sm focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                            <span class="sr-only">Open user menu</span>
                            
                        </button>
                    </div>
                    <div id="userDiv" class="transform opacity-0 scale-95 absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
                        <!-- Active: "bg-gray-100", Not Active: "" -->
                        <a asp-controller="Employee" asp-action="Index" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-2">Sign out</a>
                        <a asp-controller="Employee" asp-action="AddCV" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-2">CV</a>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Mobile menu, show/hide based on menu state. -->
    <div class="sm:hidden opacity-0 scale-95" id="mobile-menu">
        <div class="space-y-1 px-2 pt-2 pb-3">
            <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
            <a asp-controller="Employee" asp-action="Vacancies" id="vacancyNav" class="hover:bg-purple-700 hover:text-white text-gray-300 px-3 py-2 rounded-md text-sm font-medium">Vacancies</a>

            <a asp-controller="Employee" asp-action="CVs" id="cvNav" class="bg-purple-900 text-white px-3 py-2 rounded-md text-sm font-medium">Other CVs</a>

            <a asp-controller="Employee" asp-action="Applied" id="appliedNav" class=" hover:bg-purple-700 hover:text-white text-gray-300 px-3 py-2 rounded-md text-sm font-medium">Applied Vacancies</a>
        </div>
    </div>

</nav>
<body class="bg-gray-200">
<ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3 py-16 px-8">
    @foreach (Cv cv in @Model)
    {
        <li class="col-span-1 bg-white rounded-lg shadow divide-y divide-gray-200">
                <div class="w-full flex items-center justify-between p-6 space-x-6">
                    <div class="flex-1 truncate">
                        <div class="flex items-center space-x-3">
                            <h3 class="text-gray-900 text-sm font-medium truncate">@cv.Fullname</h3>
                            <span class="flex-shrink-0 inline-block px-2 py-0.5 text-green-800 text-xs font-medium bg-green-100 rounded-full">@cv.MinimumSalary USD/month</span>
                        </div>
                        <p class="mt-1 text-gray-500 text-sm truncate">@cv.About</p>
                    </div>
                    <img class="w-10 h-10 bg-gray-300 rounded-full flex-shrink-0" src="~/images/@cv.AppUser.ImageUrl" alt="">
                </div>
                <div>
                    <div class="-mt-px flex divide-x divide-gray-200">
                        <div class="w-0 flex-1 flex">
                            <a asp-controller="Employee" asp-action="DetailsCV" asp-route-id="@cv.AppUser.Id" class="relative -mr-px w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium border border-transparent rounded-bl-lg hover:text-gray-500">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 12a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                                </svg>
                                <span class="ml-3">More Details</span>
                            </a>
                        </div>
        
                    </div>
                </div>
            </li>
    }
    

    <!-- More people... -->
</ul>

    <div id="applyDiv" class="hidden fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true">
        <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
            <div id="backDiv" class="opacity-0 ease-in duration-200 fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
            <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
            <div id="modalDiv" class="opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95 ease-in duration-200 relative inline-block align-bottom bg-white rounded-lg px-4 pt-5 pb-4 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-sm sm:w-full sm:p-6">
                <div>
                    <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-green-100">
                        <!-- Heroicon name: outline/check -->
                        <svg class="h-6 w-6 text-green-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </div>
                    <div class="mt-3 text-center sm:mt-5">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">Application successful</h3>
                        <div class="mt-2">
                            <p class="text-sm text-gray-500">Your application has successfully completed.</p>
                        </div>
                    </div>
                </div>
                <div class="mt-5 sm:mt-6">
                    <button id="okBtn" type="button" class="inline-flex justify-center w-full rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:text-sm">OK</button>
                </div>
            </div>
        </div>
    </div>

</body>

<script>

    let vacancyNav = document.getElementById('vacancyNav')
    let cvNav = document.getElementById('cvNav')
    let appliedNav = document.getElementById('appliedNav')
    let btn2 = document.getElementById('menuBtn')
    let diV2 = document.getElementById('mobile-menu')
    let applyBtn = document.getElementById('applyBtn')
    let okBtn = document.getElementById('okBtn')
    let applyDiv = document.getElementById('applyDiv')
    let backDiv = document.getElementById('backDiv')
    let modalDiv = document.getElementById('modalDiv')
    let btn = document.getElementById('userBtn')
    let diV = document.getElementById('userDiv')
    btn.addEventListener("click", function () {
        if (diV.classList.contains('opacity-0', 'scale-95')) {
            diV.classList.remove('opacity-0', 'scale-95')
            diV.classList.add('opacity-100', 'scale-100', 'duration-100', 'ease-out', 'transform', 'transition')
        } else {
            diV.classList.add('opacity-0', 'scale-95', 'duration-75', 'ease-in', 'transform', 'transition')
            diV.classList.remove('opacity-100', 'scale-100')
        }
    })
    btn2.addEventListener("click", function () {
        if (diV2.classList.contains('opacity-0', 'scale-95')) {
            diV2.classList.remove('opacity-0', 'scale-95')
            diV2.classList.add('opacity-100', 'scale-100', 'duration-150', 'ease-out')
        } else {
            diV2.classList.add('opacity-0', 'scale-95', 'duration-100', 'ease-in')
            diV2.classList.remove('opacity-100', 'scale-100')
        }
    })

    vacancyNav.addEventListener("click", function () {
        vacancyNav.classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.add('bg-gray-900', 'text-white')
        cvNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.remove('bg-gray-900', 'text-white')
    })

    cvNav.addEventListener("click", function () {
        vacancyNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.add('bg-gray-900', 'text-white')
        cvNav.classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.remove('bg-gray-900', 'text-white')
    })

    appliedNav.addEventListener("click", function () {
        vacancyNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        vacancyNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.remove('bg-gray-900', 'text-white')
        cvNav.classList.add('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.remove('text-gray-300', 'hover:bg-gray-700', 'hover:text-white')
        appliedNav.classList.add('bg-gray-900', 'text-white')
    })

    applyBtn.addEventListener("click", function () {
        applyDiv.classList.remove('hidden')

        if (backDiv.classList.contains('opacity-0', 'ease-in', 'duration-200')) {
            backDiv.classList.remove('opacity-0', 'ease-in', 'duration-200')
            backDiv.classList.add('ease-out', 'duration-300', 'opacity-100')

        } else {
            backDiv.classList.add('opacity-0', 'ease-in', 'duration-200')
            backDiv.classList.remove('ease-out', 'duration-300', 'opacity-100')
        }
        modalDiv.classList.remove('opacity-0', 'ease-in', 'duration-200', 'translate-y-4', 'sm:translate-y-0', 'sm:scale-95')
        modalDiv.classList.add('ease-out', 'duration-300', 'opacity-100', 'translate-y-0', 'sm:scale-100')
    })

    okBtn.addEventListener("click", function () {
        applyDiv.classList.add('hidden')
        backDiv.classList.add('opacity-0', 'ease-in', 'duration-200')
        backDiv.classList.remove('ease-out', 'duration-300', 'opacity-100')
        modalDiv.classList.add('opacity-0', 'ease-in', 'duration-200', 'translate-y-4', 'sm:translate-y-0', 'sm:scale-95')
        modalDiv.classList.remove('ease-out', 'duration-300', 'opacity-100', 'translate-y-0', 'sm:scale-100')
    })

</script>


</html>
